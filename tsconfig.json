{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "baseUrl": "."
  },
  "include": ["src/**/*",  "src/**/*.vue"],
  "exclude": ["node_modules"]
}
